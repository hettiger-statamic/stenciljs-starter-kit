{
    "private": true,
    "scripts": {
        "start": "npm-run-all -p *:watch",

        "dev": "mix",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",

        "laravel:watch": "npm run watch",

        "components:build": "cd resources/components && stencil build",
        "components:watch": "cd resources/components && stencil build --watch",

        "storybook:build": "cd resources/components && npm run build-storybook",
        "storybook:watch": "cd resources/components && npm run storybook"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.1",
        "autoprefixer": "^10.4.0",
        "cross-env": "^7.0",
        "css-loader": "^5.2.7",
        "laravel-mix": "^6.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "postcss-import": "^14.0.1",
        "tailwindcss": "^3.0.19",
        "vue-template-compiler": "^2.6.12"
    }
}
